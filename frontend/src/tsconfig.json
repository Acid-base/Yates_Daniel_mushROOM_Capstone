{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false, 
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsxImportSource": "react",
    "noUncheckedIndexedAccess": true, // Flag potential errors when accessing array elements
    "noImplicitAny": true, // Require explicit types for better type safety
    "noImplicitReturns": true, // Ensure all code paths return a value
    "noFallthroughCasesInSwitch": true, // Prevent accidental fallthrough in switch statements
    "noUnusedLocals": true, // Warn about unused local variables
    "noUnusedParameters": true // Warn about unused function parameters
  },
  "include": ["src"]
}

